<section id="sec03">
	<header>
		<h2><%= @product.name %></h2>
	</header>
	<div class="inner">
		<ul class="col2">
			<li>
				<!-- イメージ画像 -->
				<%= image_tag @product.image.to_s %>
			</li>
			<li>
				<!-- 購入後のフラッシュ -->
        <p id="notice"><%= notice %></p>

				<!-- お米の詳細 -->
				<p><%= @product.detail %></p>

				<!-- 価格 -->
        <p class="price">
          ¥&nbsp;<%= @product.price %>
        </p>

				<!-- 注意書き -->
				<p class="note">*こちらの価格には消費税が含まれています。<br>*この商品は送料無料です。</p>

				<!-- 重さ -->
        <div class="weight">
          重さ:&nbsp;
					<select>
						<option value="サンプル1"><%= @product.weight %>kg</option>
						<option value="サンプル2"><%= @product.weight %>kg</option>
						<option value="サンプル3"><%= @product.weight %>kg</option>
					</select>
        </div>

				<!-- 数量 -->
        <div class="number">
          数量:&nbsp;
					<select>
						<option value="サンプル1"><%= @product.stock %></option>
						<option value="サンプル2"><%= @product.stock %></option>
						<option value="サンプル3"><%= @product.stock %></option>
					</select>
        </div>

        <!-- <%= link_to 'Edit', edit_product_path(@product) %> |
        <%= link_to 'Back', products_path %> -->

				<!-- クレカで支払い -->
        <%= form_tag(action: :pay, method: :post) do %>
          <script type="text/javascript"
            src="https://checkout.pay.jp"
            class="payjp-button"
            data-key="pk_test_0383a1b8f91e8a6e3ea0e2a9">
          </script>
        <% end %>
			</li>
		</ul>
	</div>
</section>
